{
    "manifest_version": 3,
    "name": "Telegram Popup",
    "description": "A popup for chatting in telegram on a extension.",
    "version": "1.0.0",
    "author": "Matteo Geusa Dev",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "Telegram Popup",
        "default_popup": "popup.html"
    },
    "declarative_net_request": {
        "rule_resources": [{
          "id": "net_rules",
          "enabled": true,
          "path": "net_rules.json"
        }]
      },
    "permissions": ["declarativeNetRequest"],
    "host_permissions": [
        "<all_urls>"
    ]
}