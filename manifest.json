{
    "manifest_version": 3,
    "name": "Telegram Portable",
    "description": "Telegram web on a extension",
    "version": "0.0.1",
    "author": "Matteo Geusa",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "Telegram Portable",
        "default_popup": "popup.html"
    },
    "declarative_net_request": {
        "rule_resources": [{
          "id": "net_rules",
          "enabled": true,
          "path": "net_rules.json"
        }]
      },
    "permissions": ["declarativeNetRequest"],
    "host_permissions": [
        "<all_urls>"
    ]
}